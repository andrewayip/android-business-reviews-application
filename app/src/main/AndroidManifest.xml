<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_team_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_team_project">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- SECONDARY ACTIVITY CLASS: SEARCH PAGE ACTIVITY -->
        <activity android:name=".SearchPageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"/>
        <!-- THIRD ACTIVITY CLASS: RESULT PAGE ACTIVITY -->
        <activity android:name=".ResultPageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".SearchPageActivity"/>
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity"/>
        />
    </application>

</manifest>